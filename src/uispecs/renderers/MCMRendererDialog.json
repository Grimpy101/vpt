// #package uispecs

// #section MCMRendererDialog

{
  "type": "panel",
  "children": [
    {
      "type": "field",
      "label": "Extinction:",
      "children": [
        {
          "type": "spinner",
          "bind": "extinction",
          "logarithmic": true,
          "value": 1,
          "min": 0,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Scattering albedo:",
      "children": [
        {
          "type": "slider",
          "bind": "albedo",
          "value": 0.5,
          "min": 0,
          "max": 1,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Scattering bias:",
      "children": [
        {
          "type": "slider",
          "bind": "bias",
          "value": 0,
          "min": -1,
          "max": 1,
          "step": 0.2
        }
      ]
    },
    {
      "type": "field",
      "label": "Majorant ratio:",
      "children": [
        {
          "type": "slider",
          "bind": "ratio",
          "value": 1,
          "min": 0,
          "max": 1,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Max bounces:",
      "children": [
        {
          "type": "spinner",
          "bind": "bounces",
          "value": 8,
          "min": 0
        }
      ]
    },
    {
      "type": "field",
      "label": "Steps:",
      "children": [
        {
          "type": "spinner",
          "bind": "steps",
          "value": 8,
          "min": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Min Cut Planes:",
      "children": [
        {
          "type": "vector",
          "bind": "minCutPlanes",
          "value": 0,
          "step": 0.02,
          "min": 0,
          "max": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "MaxCutPlanes:",
      "children": [
        {
          "type": "vector",
          "bind": "maxCutPlanes",
          "value": 1,
          "step": 0.02,
          "min": 0,
          "max": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "ViewCutDistance:",
      "children": [
        {
          "type": "spinner",
          "bind": "viewCutDistance",
          "value": 0,
          "step": 0.1,
          "min": 0,
          "max": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Max. Contribution:",
      "children": [
        {
          "type": "checkbox",
          "bind": "maxContribution",
          "checked": false
        }
      ]
    },
    {
      "type": "field",
      "label": "Original data in Channel #0:",
      "children": [
        {
          "type": "checkbox",
          "bind": "origData",
          "checked": false
        }
      ]
    },
    {
      "type": "field",
      "label": "Orig. vs. Seg.:",
      "children": [
        {
          "type": "slider",
          "bind": "origVsSeg",
          "value": 0.5,
          "min": 0,
          "max": 1,
          "step": 0.1
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Transfer function",
      "children": [
        {
          "type": "tabs",
          "bind": "tftabs",
          "children": {
          }
        }
      ]
    }
  ]
}