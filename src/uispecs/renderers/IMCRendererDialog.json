// #package uispecs

// #section IMCRendererDialog

{
  "type": "panel",
  "children": [
    {
      "type": "field",
      "label": "Steps:",
      "children": [
        {
          "type": "spinner",
          "bind": "steps",
          "value": 10,
          "min": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Isovalue:",
      "children": [
        {
          "type": "slider",
          "bind": "isovalue",
          "value": 0.5,
          "min": 0,
          "max": 1,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Light direction:",
      "children": [
        {
          "type": "vector",
          "bind": "direction",
          "value": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Color:",
      "children": [
        {
          "type": "color-chooser",
          "bind": "color",
          "value": "#ddeeff"
        }
      ]
    },
    {
      "type": "field",
      "label": "Shader Type:",
      "children": [
        {
          "type": "dropdown",
          "bind": "shader_type",
          "options": [
            {
              "value": 0,
              "label": "Lambert",
              "selected": true
            },
            {
              "value": 1,
              "label": "BRDF",
              "selected": false
            }
          ]
        }
      ]
    },
    {
      "type": "accordion",
      "label": "BRDF:",
      "children": [
        {
          "type": "field",
          "label": "Matalic:",
          "children": [
            {
              "type": "slider",
              "bind": "metalic",
              "value": 0,
              "min": 0,
              "max": 1,
              "step": 0.05
            }
          ]
        },
        {
          "type": "field",
          "label": "f0:",
          "children": [
            {
              "type": "color-chooser",
              "bind": "f0",
              "value": "#0a0a0a"
            }
          ]
        },
        {
          "type": "field",
          "label": "f90:",
          "children": [
            {
              "type": "color-chooser",
              "bind": "f90",
              "value": "#ffffff"
            }
          ]
        },
        {
          "type": "field",
          "label": "Specular Weight:",
          "children": [
            {
              "type": "slider",
              "bind": "specularWeight",
              "value": 1.0,
              "min": 0,
              "max": 1,
              "step": 0.05
            }
          ]
        },
        {
          "type": "field",
          "label": "Alpha Roughness:",
          "children": [
            {
              "type": "slider",
              "bind": "alphaRoughness",
              "value": 0.08,
              "min": 0,
              "max": 1,
              "step": 0.05
            }
          ]
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Multiple Scattering:",
      "children": [
        {
          "type": "field",
          "label": "Extinction:",
          "children": [
            {
              "type": "spinner",
              "bind": "extinction",
              "logarithmic": true,
              "value": 1,
              "min": 0,
              "step": 0.1
            }
          ]
        },
        {
          "type": "field",
          "label": "Scattering albedo:",
          "children": [
            {
              "type": "slider",
              "bind": "albedo",
              "value": 0.5,
              "min": 0,
              "max": 1,
              "step": 0.1
            }
          ]
        },
        {
          "type": "field",
          "label": "Scattering bias:",
          "children": [
            {
              "type": "slider",
              "bind": "bias",
              "value": 0,
              "min": -1,
              "max": 1,
              "step": 0.2
            }
          ]
        },
        {
          "type": "field",
          "label": "Majorant ratio:",
          "children": [
            {
              "type": "slider",
              "bind": "ratio",
              "value": 1,
              "min": 0,
              "max": 1,
              "step": 0.1
            }
          ]
        },
        {
          "type": "field",
          "label": "Max bounces:",
          "children": [
            {
              "type": "spinner",
              "bind": "bounces",
              "value": 8,
              "min": 0
            }
          ]
        },
        {
          "type": "field",
          "label": "Steps:",
          "children": [
            {
              "type": "spinner",
              "bind": "mcm_steps",
              "value": 8,
              "min": 1
            }
          ]
        },
        {
          "type": "accordion",
          "label": "Transfer function",
          "children": [
            {
              "type": "panel",
              "bind": "tfcontainer"
            }
          ]
        }
      ]
    }
  ]
}