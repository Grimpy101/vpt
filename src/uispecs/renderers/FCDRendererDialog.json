// #package uispecs

// #section FCDRendererDialog

{
  "type": "panel",
  "children": [
    {
      "type": "field",
      "label": "Steps:",
      "children": [
        {
          "type": "spinner",
          "bind": "steps",
          "value": 300,
          "min": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Opacity:",
      "children": [
        {
          "type": "spinner",
          "bind": "opacity",
          "logarithmic": true,
          "value": 100,
          "min": 0,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Convection steps:",
      "children": [
        {
          "type": "spinner",
          "bind": "convectionSteps",
          "value": 5,
          "min": 0,
          "step": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Absorption Coefficient:",
      "children": [
        {
          "type": "spinner",
          "bind": "absorptionCoefficient",
          "value": 0.5,
          "min": 0,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Scattering:",
      "children": [
        {
          "type": "spinner",
          "bind": "scattering",
          "value": 0.1,
          "min": 0,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Volume to Light Volume ratio:",
      "children": [
        {
          "type": "spinner",
          "bind": "ratio",
          "value": 1,
          "min": 1,
          "step": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Convections before diffusion:",
      "children": [
        {
          "type": "spinner",
          "bind": "repeats",
          "value": 0,
          "min": 0,
          "step": 1
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Transfer function",
      "children": [
        {
          "type": "panel",
          "bind": "tfcontainer"
        }
      ]
    }
  ]
}