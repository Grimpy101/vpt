// #package uispecs

// #section FCDRendererDialog

{
  "type": "panel",
  "children": [
    {
      "type": "field",
      "label": "Steps:",
      "children": [
        {
          "type": "spinner",
          "bind": "steps",
          "value": 300,
          "min": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Opacity:",
      "children": [
        {
          "type": "spinner",
          "bind": "opacity",
          "logarithmic": true,
          "value": 100,
          "min": 0,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Convection steps:",
      "children": [
        {
          "type": "spinner",
          "bind": "convectionSteps",
          "value": 5,
          "min": 0,
          "step": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Light Type:",
      "children": [
        {
          "type": "dropdown",
          "bind": "lightType",
          "options": [
            {
              "value": "distant",
              "label": "Distant",
              "selected": true
            },
            {
              "value": "point",
              "label": "Point"
            }
          ]
        }
      ]
    },
    {
      "type": "field",
      "label": "Light direction/position:",
      "children": [
        {
          "type": "vector",
          "bind": "direction",
          "value": 10
        }
      ]
    },
    {
      "type": "field",
      "label": "Absorption Coefficient:",
      "children": [
        {
          "type": "spinner",
          "bind": "absorptionCoefficient",
          "value": 0.5,
          "min": 0,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Scattering:",
      "children": [
        {
          "type": "spinner",
          "bind": "scattering",
          "value": 0.5,
          "min": 0,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Volume to Light Volume ratio:",
      "children": [
        {
          "type": "spinner",
          "bind": "ratio",
          "value": 2,
          "min": 1,
          "step": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Convections before diffusion:",
      "children": [
        {
          "type": "spinner",
          "bind": "repeats",
          "value": 0,
          "min": 0,
          "step": 1
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Transfer function",
      "children": [
        {
          "type": "panel",
          "bind": "tfcontainer"
        }
      ]
    }
  ]
}