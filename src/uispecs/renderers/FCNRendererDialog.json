// #package uispecs

// #section FCNRendererDialog

{
  "type": "panel",
  "children": [
    {
      "type": "field",
      "label": "Steps:",
      "children": [
        {
          "type": "spinner",
          "bind": "steps",
          "value": 300,
          "min": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Opacity:",
      "children": [
        {
          "type": "spinner",
          "bind": "opacity",
          "logarithmic": true,
          "value": 100,
          "min": 0,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Convection steps:",
      "children": [
        {
          "type": "spinner",
          "bind": "convectionSteps",
          "value": 1,
          "min": 0,
          "step": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Absorption Coefficient:",
      "children": [
        {
          "type": "spinner",
          "bind": "absorptionCoefficient",
          "value": 0.5,
          "min": 0,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Scattering:",
      "children": [
        {
          "type": "spinner",
          "bind": "scattering",
          "value": 0,
          "min": 0,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Volume to Light Volume ratio:",
      "children": [
        {
          "type": "spinner",
          "bind": "ratio",
          "value": 1,
          "min": 1,
          "step": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Deferred Rendering:",
      "children": [
        {
          "type": "checkbox",
          "bind": "deferred_enabled",
          "checked": false
        }
      ]
    },
    {
      "type": "field",
      "label": "Convections before diffusion:",
      "children": [
        {
          "type": "spinner",
          "bind": "repeats",
          "value": 0,
          "min": 0,
          "step": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Time Step:",
      "children": [
        {
          "type": "spinner",
          "bind": "time_step",
          "value": 0.1,
          "min": 0,
          "max": 1,
          "step": 0.05
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Smart De-Noise",
      "children": [
        {
          "type": "field",
          "label": "Enabled:",
          "children": [
            {
              "type": "checkbox",
              "bind": "sd_enabled",
              "checked": true
            }
          ]
        },
        {
          "type": "field",
          "label": "Sigma:",
          "children": [
            {
              "type": "spinner",
              "bind": "sd_sigma",
              "value": 5,
              "min": 0,
              "step": 0.1
            }
          ]
        },
        {
          "type": "field",
          "label": "K Sigma:",
          "children": [
            {
              "type": "spinner",
              "bind": "sd_ksigma",
              "value": 2,
              "min": 0,
              "step": 0.1
            }
          ]
        },
        {
          "type": "field",
          "label": "threshold:",
          "children": [
            {
              "type": "spinner",
              "bind": "sd_threshold",
              "value": 0.1,
              "min": 0,
              "step": 0.001
            }
          ]
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Transfer function",
      "children": [
        {
          "type": "panel",
          "bind": "tfcontainer"
        }
      ]
    }
  ]
}